<?xml version="1.0" encoding="utf-8"?>
<extension version="3" type="plugin" group="system" method="upgrade" client="site">
    <name>System - Sendy</name>
    <version>2.0.0</version>
    <creationDate>22.07.2020</creationDate>
    <author>Jakub Skowro≈Ñski | www.jsns.eu</author>
    <authorEmail>support@jsns.eu</authorEmail>
    <authorUrl>https://www.jsns.eu</authorUrl>
    <copyright>2020 JS Soft. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>
        <![CDATA[<div style="border: 1px solid #6ba6d7; text-align: justify;"><div style="text-align:center; font-size: 18px; color: white; background:#6ba6d7; padding: 5px;">Sendy System Plugin</div><div style="padding: 4px; background:white; font-size: 12px;">Sendy integration for Joomla.<br/>Use this plugin to auto-subscribe users to a specified list on registration.<br/><br/></div></div>]]>
    </description>
    <files>
        <filename plugin="sendy">sendy.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="widget" label="COM_PLUGINS_BASIC_FIELDSET_LABEL">
                <field name="sendy_url" type="text" label="Sendy URL" size="50" description="The URL to your Sendy installation"/>
                <field name="list1_id" type="text" label="List #1 Id" size="50" description="Enter a List ID"/>
                <field name="list1_name" type="text" label="List #1 Name" size="50" description="Enter a List Name"/>
                <field name="list2_id" type="text" label="List #2 Id" size="50" description="Enter a List ID"/>
                <field name="list2_name" type="text" label="List #2 Name" size="50" description="Enter a List Name"/>
                <field name="list3_id" type="text" label="List #3 Id" size="50" description="Enter a List ID"/>
                <field name="list3_name" type="text" label="List #3 Name" size="50" description="Enter a List Name"/>
                <field name="list4_id" type="text" label="List #4 Id" size="50" description="Enter a List ID"/>
                <field name="list4_name" type="text" label="List #4 Name" size="50" description="Enter a List Name"/>
                <field name="list5_id" type="text" label="List #5 Id" size="50" description="Enter a List ID"/>
                <field name="list5_name" type="text" label="List #5 Name" size="50" description="Enter a List Name"/>
            </fieldset>
        </fields>
    </config>
</extension>